---
interface Props {
  title: string;
  tags: string[];
  date: string;
  coverUrl: string;
  url: string;
}

const { title, tags, date, coverUrl, url } = Astro.props;
---

<a href={url}>
  <div class="flex h-full justify-between gap-4 lg:flex-col">
    <div class="w-3/12 sm:w-4/12 lg:w-full">
      <img
        src={coverUrl}
        alt={title}
        class="h-20 w-full rounded-lg object-cover lg:h-36"
      />
    </div>
    <div
      class="flex h-full w-9/12 flex-col border-b border-dashed border-slate-700 lg:w-full"
    >
      <div class="flex flex-1 justify-start lg:mb-2">
        <h1 class="line-clamp-2 text-base font-semibold text-gray-50">
          {title}
        </h1>
      </div>

      <div class="flex flex-1 flex-col justify-end">
        <div class="text-xs text-red-400">
          {
            tags != null &&
              tags.length > 0 &&
              tags.map((tag) => <span class="mr-1">#{tag}</span>)
          }
        </div>
        <div class="text-right text-xs text-gray-400">{date}</div>
      </div>
    </div>
  </div>
</a>
